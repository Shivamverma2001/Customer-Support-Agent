# PostgreSQL connection string (required for Phase 1)
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/customer_support?schema=public"

# AI provider: "openai" | "groq" | "gemini". Default: openai.
AI_PROVIDER="openai"

# OpenAI (used when AI_PROVIDER=openai). Required for chat when using OpenAI.
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o-mini"

# Groq (used when AI_PROVIDER=groq). Get key at https://console.groq.com. Free tier available.
GROQ_API_KEY="gsk_..."
GROQ_MODEL="llama-3.1-8b-instant"

# Gemini (used when AI_PROVIDER=gemini). Get key at https://aistudio.google.com/apikey. Supports tools.
GOOGLE_GENERATIVE_AI_API_KEY="..."
GEMINI_MODEL="gemini-2.5-flash"
